{
  "name": "hexa",
  "version": "1.0.0",
  "main": "dist/main/app.js",
  "scripts": {
    "test": "jest --passWithNoTests --runInBand --detectOpenHandles --no-cache",
    "test:stage": "npm run test -- --findRelatedTest",
    "test:ci": "npm run test -- --coverage",
    "start": "nodemon && tsc && node dist/main/app.js",
    "dev": "tsc-watch --onSuccess \"node ./dist/app.js\"",
    "build:watch": "npm run build --watch",
    "lint": "eslint --ignore-path .ignore --ext .ts --fix ",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "cesarzoleko",
  "license": "ISC",
  "description": "clean  architecture with nodejs and typescript",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.21",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.4",
    "@types/tsc-watch": "^4.2.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "typescript-module-alias": "^2.2.9"
  },
  "_moduleAliases": {
    "@domain": "dist/domain",
    "@application": "dist/application",
    "@infrastruture": "dist/infrastruture",
    "@main": "dist/main"
  },
  "lint-staged": {
    "* .ts": [
      "npm run lint",
      "npm run test:stage"
    ]
  }
}
